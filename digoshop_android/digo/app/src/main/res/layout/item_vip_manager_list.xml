<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/relone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:paddingBottom="@dimen/base_dimen_20"
    >

    <RelativeLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_16"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/vip_list_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26548977945654562"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_30"
            />

        <TextView
            android:id="@+id/vip_list_item_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="银卡会员"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_30"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/vip_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平立盛"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_30"
            />

        <TextView
            android:id="@+id/vip_list_item_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="18611672602"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_30"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_16"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/vip_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="2016-03-20 12:25:56"
            android:textColor="#c4c4c4"
            android:textSize="@dimen/base_dimen_30"
            />

        <TextView

            android:id="@+id/vip_list_item_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="已解锁"
            android:textColor="#c4c4c4"
            android:textSize="@dimen/base_dimen_30"
            />

    </RelativeLayout>
</LinearLayout>