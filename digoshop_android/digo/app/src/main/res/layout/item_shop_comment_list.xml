<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/comment_headimg"
            android:layout_width="@dimen/base_dimen_60"
            android:layout_height="@dimen/base_dimen_60"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_12"
            android:src="@drawable/xiangji"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/relfour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/comment_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/base_dimen_20"
                    android:text="好评"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/base_dimen_28"
                    />

                <ImageView
                    android:id="@+id/comment_image_kind"
                    android:layout_width="@dimen/base_dimen_32"
                    android:layout_height="@dimen/base_dimen_32"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/comment_kind"
                    android:src="@drawable/dppj_hao"
                    />

                <TextView
                    android:id="@+id/comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/comment_image_kind"
                    android:text="北大学霸"
                    android:textColor="@color/word_color"
                    android:textSize="@dimen/base_dimen_32"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_marginTop="@dimen/base_dimen_8"
                    android:text="2016-01-15 19:26"
                    android:textColor="#999999"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:id="@+id/reply_save"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/base_dimen_44"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/base_dimen_20"
                    android:background="@color/white"
                    android:text="保存"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/base_dimen_28"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/comment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_marginRight="@dimen/base_dimen_20"
                    android:layout_marginTop="@dimen/base_dimen_8"
                    android:text="这家商店是真的好,价格公道,产品就是好,我很喜欢哦,今天真的很不错"
                    android:textSize="@dimen/base_dimen_28"
                    />

                <HorizontalScrollView
                    android:id="@+id/c_horizion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_dimen_10"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/comment_imageone"
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:src="@drawable/dppj_tjtup"
                            android:textColor="@color/blue"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/comment_imagetwo"
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:src="@drawable/dppj_tjtup"
                            android:textColor="@color/blue"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/comment_imagethree"
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:src="@drawable/dppj_tjtup"
                            android:textColor="@color/blue"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/comment_imagefour"
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:src="@drawable/dppj_tjtup"
                            android:textColor="@color/blue"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/comment_imagefive"
                            android:layout_width="@dimen/base_dimen_160"
                            android:layout_height="@dimen/base_dimen_160"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:src="@drawable/dppj_tjtup"
                            android:textColor="@color/blue"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                </HorizontalScrollView>

                <View
                    android:id="@+id/my_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_1"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:background="#efefef"
                    />

                <LinearLayout
                    android:id="@+id/ll_reply"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_60"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/base_dimen_36"
                        android:layout_height="@dimen/base_dimen_36"
                        android:src="@drawable/huifu"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/base_dimen_8"
                        android:text="商家回复"
                        android:textColor="@color/word_color"
                        android:textSize="@dimen/base_dimen_28"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/ed_reply_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/base_dimen_20"
                        android:layout_marginLeft="@dimen/base_dimen_16"
                        android:background="@null"
                        android:hint="商家在此处回复"
                        android:textColorHint="@color/editext_word_color"
                        android:textSize="@dimen/base_dimen_32"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
