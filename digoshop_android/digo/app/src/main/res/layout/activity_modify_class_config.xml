<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        >

        <include layout="@layout/layout_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relone"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_100"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/classname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="等级名称"
                    android:textColor="@color/word_color"
                    android:textSize="@dimen/base_dimen_30"
                    />

                <EditText
                    android:id="@+id/ed_classname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_toRightOf="@+id/classname"
                    android:background="@null"
                    android:hint="会员名称"
                    android:maxLength="10"
                    android:textColor="@color/word_color"
                    android:textColorHint="@color/editext_word_color"
                    android:textSize="@dimen/base_dimen_28"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="#c2c2c2"
                />

            <RelativeLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_100"
                android:layout_below="@+id/linear1"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/suoxujifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="所需积分"
                    android:textColor="@color/word_color"
                    android:textSize="@dimen/base_dimen_30"
                    />

                <EditText
                    android:id="@+id/ed_configjifen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/base_dimen_20"
                    android:layout_toRightOf="@+id/suoxujifen"
                    android:background="@null"
                    android:hint="积分数目"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/word_color"
                    android:textColorHint="@color/editext_word_color"
                    android:textSize="@dimen/base_dimen_28"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="#c2c2c2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reltwo"
                android:layout_marginBottom="@dimen/base_dimen_20"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:layout_marginRight="@dimen/base_dimen_30"
                android:layout_marginTop="@dimen/base_dimen_20"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/base_dimen_80"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_btn"
                    android:text="取消"
                    android:textSize="@dimen/base_dimen_36"
                    />

                <Button
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/base_dimen_80"
                    android:layout_marginLeft="@dimen/base_dimen_40"
                    android:layout_weight="1"
                    android:background="@drawable/bg_orange_btn"
                    android:text="保存"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/base_dimen_36"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
