<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/layout_title"/>

        <ImageView
            android:id="@+id/erwei"
            android:layout_width="@dimen/base_dimen_600"
            android:layout_height="@dimen/base_dimen_600"
            android:layout_marginTop="@dimen/base_dimen_80"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_40"
            android:layout_marginTop="@dimen/base_dimen_40"
            android:text="商家开通后，系统自动生成二维码，可供用户扫描"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_28"/>

    </LinearLayout>
</LinearLayout>