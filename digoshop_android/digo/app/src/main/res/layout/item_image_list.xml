<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

    <TextView
        android:id="@+id/image_selected_bg"
        android:layout_width="@dimen/base_dimen_256"
        android:layout_height="@dimen/base_dimen_204"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/base_dimen_256"
        android:layout_height="@dimen/base_dimen_200"
        android:layout_centerInParent="true"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/selected_tag"
        android:layout_width="@dimen/base_dimen_52"
        android:layout_height="@dimen/base_dimen_52"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/base_dimen_6"/>

</RelativeLayout>