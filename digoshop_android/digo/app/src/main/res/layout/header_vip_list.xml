<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reltwo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/base_dimen_20"
    android:paddingTop="@dimen/base_dimen_20"
    >

    <RelativeLayout
        android:id="@+id/relthree"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_dimen_60"
        android:layout_marginLeft="@dimen/base_dimen_26"
        android:layout_marginRight="@dimen/base_dimen_20"
        android:layout_toLeftOf="@+id/tv_search"
        android:background="@drawable/hygl_k"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/base_dimen_30"
            android:layout_height="@dimen/base_dimen_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:src="@drawable/hygl_sous"
            />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:layout_toRightOf="@+id/image"
            android:background="@null"
            android:maxLength="11"
            android:hint="输入会员手机号查询"
            android:inputType="phone"
            android:textColorHint="#c4c4c4"
            android:textSize="@dimen/base_dimen_30"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base_dimen_40"
        android:text="搜索"
        android:textSize="@dimen/base_dimen_36"
        />
</RelativeLayout>