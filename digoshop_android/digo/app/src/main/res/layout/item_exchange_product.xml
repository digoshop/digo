<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/base_dimen_20"
              android:paddingRight="@dimen/base_dimen_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_120"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_exchange_image"
            android:layout_width="@dimen/base_dimen_120"
            android:layout_height="@dimen/base_dimen_120"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="时尚修身连帽开衫卫衣"
                android:textColor="@color/word_color"
                android:textSize="@dimen/base_dimen_30"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:layout_marginTop="@dimen/base_dimen_4"
                android:layout_weight="1"
                android:gravity="bottom"
                >

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80+100"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/base_dimen_30"
                    />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="审核中"
                    android:textSize="@dimen/base_dimen_24"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_10"
                android:text="100"
                android:textSize="@dimen/base_dimen_24"
                />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_10"
        android:layout_marginTop="@dimen/base_dimen_10"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/title_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束日期:"
                android:textColor="@color/word_time"
                android:textSize="@dimen/base_dimen_24"
                />

            <TextView
                android:id="@+id/tv_exchange_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.2.15 12:00"
                android:textColor="@color/word_time"
                android:textSize="@dimen/base_dimen_24"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/btn_is_tui"
                android:layout_width="@dimen/base_dimen_60"
                android:layout_height="@dimen/base_dimen_32"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/base_dimen_40"
                android:background="@drawable/my_tv_border"
                android:gravity="center"
                android:text="@string/btn_tuijian"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_20"

                />

            <TextView
                android:id="@+id/tv_is_use"
                android:layout_width="@dimen/base_dimen_60"
                android:layout_height="@dimen/base_dimen_32"
                android:layout_gravity="center_vertical"
                android:background="@drawable/my_tv_border"
                android:gravity="center"
                android:text="上架"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_20"

                />

            <ImageView
                android:id="@+id/img_update"
                android:layout_width="@dimen/base_dimen_30"
                android:layout_height="@dimen/base_dimen_30"
                android:layout_marginLeft="@dimen/base_dimen_40"
                android:src="@drawable/bianjipic"/>

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="@dimen/base_dimen_30"
                android:layout_height="@dimen/base_dimen_30"
                android:layout_marginLeft="@dimen/base_dimen_40"
                android:src="@drawable/shanchupic"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>