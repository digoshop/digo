<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/base_dimen_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/base_dimen_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statis_nick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:gravity="center_vertical|start"
            android:singleLine="true"
            android:text="1362****698"
            android:textColor="@color/cancel_word_color"
            android:textSize="@dimen/base_dimen_28"
            />

        <TextView
            android:id="@+id/y_vip_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:text="会员"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_28"

            />
        <!--<ImageView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="fitStart"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:src="@drawable/youhuiquan"-->
        <!--android:id="@+id/imageView7" />-->

        <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="-$10"-->
        <!--android:gravity="center_vertical|start"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:id="@+id/reducemoney" />-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|end"
                android:text="消费"
                android:textColor="@color/cancel_word_color"
                android:textSize="@dimen/base_dimen_28"/>

            <TextView
                android:id="@+id/statics_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="258"
                android:textColor="@color/orange"
                android:textSize="@dimen/base_dimen_28"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|start"
                android:text="元"
                android:textColor="@color/cancel_word_color"
                android:textSize="@dimen/base_dimen_28"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/base_dimen_4"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/workkinds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="小时工,保洁"
            android:textColor="@color/cancel_word_color"
            android:textSize="@dimen/base_dimen_28"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="销售结算"
            android:textColor="@color/cancel_word_color"
            android:textSize="@dimen/base_dimen_28"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/base_dimen_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statics_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2016.03.21  10:45:10"
            android:textColor="@color/word_time"
            android:textSize="@dimen/base_dimen_28"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_protype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/base_dimen_20"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>