<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/layout_title"/>

        <RelativeLayout
            android:id="@+id/reset_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_100"
            android:layout_below="@+id/relone"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:gravity="center"
                android:text="绑定手机"
                android:textColor="@color/word_color"
                android:textSize="@dimen/base_dimen_30"
                />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/base_dimen_24"
                android:layout_height="@dimen/base_dimen_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:src="@drawable/spsz_jiant"
                />

            <TextView
                android:id="@+id/tv_current_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:layout_toLeftOf="@id/img_right"
                android:gravity="center"
                android:text="1841***6454"
                android:textColor="@color/cache_count"
                android:textSize="@dimen/base_dimen_28"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_below="@+id/reset_password"
            android:background="#c2c2c2"
            />

        <RelativeLayout
            android:id="@+id/reset_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_100"
            android:layout_below="@+id/relone"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:gravity="center"
                android:text="密码重置"
                android:textColor="@color/word_color"
                android:textSize="@dimen/base_dimen_30"
                />

            <ImageView
                android:layout_width="@dimen/base_dimen_24"
                android:layout_height="@dimen/base_dimen_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:src="@drawable/spsz_jiant"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_below="@+id/reset_password"
            android:background="#c2c2c2"
            />

        <RelativeLayout
            android:id="@+id/clear_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_100"
            android:layout_below="@+id/view1"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:gravity="center"
                android:text="清理缓存"
                android:textColor="@color/word_color"
                android:textSize="@dimen/base_dimen_30"
                />

            <TextView
                android:id="@+id/cachesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:layout_toLeftOf="@+id/dayu"
                android:text=""
                android:textColor="@color/cache_count"
                android:textSize="@dimen/base_dimen_28"
                />

            <ImageView
                android:id="@+id/dayu"
                android:layout_width="@dimen/base_dimen_24"
                android:layout_height="@dimen/base_dimen_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:src="@drawable/spsz_jiant"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:background="#c2c2c2"
            />
    </LinearLayout>
</RelativeLayout>
