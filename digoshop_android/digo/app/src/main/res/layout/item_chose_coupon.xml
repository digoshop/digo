<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_150"
            >

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_daijinquan_left"
                >

            </ImageView>

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/base_dimen_140"
                android:layout_height="match_parent"
                android:background="@drawable/shape_daijinquan_right">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_150"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="@dimen/base_dimen_210"
                android:layout_height="@dimen/base_dimen_120"
                android:orientation="vertical"
                android:paddingLeft="@dimen/base_dimen_20"
                android:paddingRight="@dimen/base_dimen_20"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/y_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/base_dimen_4"
                        android:gravity="bottom"
                        android:text="5000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_60"
                        />

                    <TextView
                        android:id="@+id/y_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:text="元"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_28"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/y_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_10"
                    android:alpha="0.7"
                    android:background="@drawable/my_border"
                    android:gravity="center"
                    android:paddingLeft="@dimen/base_dimen_4"
                    android:paddingRight="@dimen/base_dimen_4"
                    android:text="代金券"
                    android:textColor="#99CC00"
                    android:textSize="@dimen/base_dimen_24"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/y_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="快来热风选购吧,活动多多,优惠多多!"
                    android:textColor="@color/word_color"
                    android:textSize="@dimen/base_dimen_28"/>

                <TextView
                    android:id="@+id/y_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满800可用"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:id="@+id/y_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/base_dimen_2"
                    android:layout_marginRight="@dimen/base_dimen_10"
                    android:layout_marginTop="@dimen/base_dimen_2"
                    android:alpha="0.7"
                    android:background="@drawable/my_border"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/base_dimen_4"
                    android:paddingRight="@dimen/base_dimen_4"
                    android:text="服装,箱包,书籍,酒水类"
                    android:textColor="#99CC00"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/y_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016.01.25"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_24"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="至"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_24"
                        />

                    <TextView
                        android:id="@+id/y_endtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2016.01.25"
                        android:textColor="@color/white"
                        android:textSize="@dimen/base_dimen_24"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/base_dimen_20"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_dimen_10_fu"
                android:layout_marginRight="@dimen/base_dimen_10_fu"
                android:src="@drawable/ppting_line"/>

            <LinearLayout
                android:layout_width="@dimen/base_dimen_140"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/y_use"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="可用"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>