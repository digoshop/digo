<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/base_dimen_20"
              android:paddingLeft="@dimen/base_dimen_10"
              android:paddingRight="@dimen/base_dimen_10"
              android:paddingTop="@dimen/base_dimen_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_160"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="@dimen/base_dimen_160"
            android:layout_height="@dimen/base_dimen_160"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="时尚修身连帽开衫卫衣"
                android:textColor="@color/word_color"
                android:textSize="@dimen/base_dimen_30"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/renminbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消耗:"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:id="@+id/tv_bi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/renminbi"
                    android:text="1000"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_money"
                    android:text="币"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/base_dimen_40"
                    android:text="价值:"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/renminbi"
                    android:text="1000"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:id="@+id/tv_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="@dimen/base_dimen_24"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_20"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="认购金额:"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:id="@+id/tv_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/title_subscription"
                    android:text="1000"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_subscription"
                    android:text="元"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="积分换购"
                    android:textSize="@dimen/base_dimen_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_type"
                    android:text="类型:"
                    android:textSize="@dimen/base_dimen_24"
                    />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>