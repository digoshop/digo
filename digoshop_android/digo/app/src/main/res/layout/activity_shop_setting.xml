<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c2"
        android:orientation="vertical"
        >

        <include layout="@layout/layout_title"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_160"
            android:orientation="horizontal"
            android:background="@drawable/spsz_bj"
            >

            <ImageView
                android:id="@+id/showpImage"
                android:layout_width="@dimen/base_dimen_120"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:layout_height="@dimen/base_dimen_120"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:src="@drawable/default_108_108" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/showpImage"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/base_dimen_30"
                    />

                <TextView
                    android:id="@+id/shop_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_dimen_10"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/base_dimen_28"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/shopma"
                android:layout_width="@dimen/base_dimen_60"
                android:layout_height="@dimen/base_dimen_60"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:src="@drawable/spsz_erweima"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:background="@color/under_color"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/rel_store_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltwo"
                    android:orientation="vertical"
                    android:tag="S_Shop"
                    android:background="@color/white"
                    android:visibility="gone"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/image33"
                            android:layout_width="@dimen/base_dimen_60"
                            android:layout_height="@dimen/base_dimen_60"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:src="@drawable/image_setting"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_toRightOf="@+id/image33"
                            android:text="店铺设置"
                            android:textColor="@color/word_color"
                            android:textSize="@dimen/base_dimen_32"
                            />

                        <ImageView
                            android:layout_width="@dimen/base_dimen_24"
                            android:layout_height="@dimen/base_dimen_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_jiant"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dimen_1"
                        android:layout_below="@+id/relfour"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:background="#c2c2c2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rel_zhanghao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltwo"
                    android:orientation="vertical"
                    android:tag="P_Security"
                    android:background="@color/white"
                    android:visibility="gone"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="@dimen/base_dimen_60"
                            android:layout_height="@dimen/base_dimen_60"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_zhangh"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_toRightOf="@+id/image1"
                            android:text="账号安全"
                            android:textColor="@color/word_color"
                            android:textSize="@dimen/base_dimen_32"
                            />

                        <ImageView
                            android:layout_width="@dimen/base_dimen_24"
                            android:layout_height="@dimen/base_dimen_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_jiant"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relfive"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dimen_1"
                        android:layout_below="@+id/relfour"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:background="#c2c2c2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rel_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltwo"
                    android:orientation="vertical"
                    android:tag="S_Production"
                    android:background="@color/white"
                    android:visibility="gone"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="@dimen/base_dimen_60"
                            android:layout_height="@dimen/base_dimen_60"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_fuwu"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_toRightOf="@+id/image2"
                            android:text="产品管理"
                            android:textColor="@color/word_color"
                            android:textSize="@dimen/base_dimen_32"
                            />

                        <ImageView
                            android:layout_width="@dimen/base_dimen_24"
                            android:layout_height="@dimen/base_dimen_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_jiant"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dimen_1"
                        android:layout_below="@+id/relfour"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:background="#c2c2c2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rel_vip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltwo"
                    android:orientation="vertical"
                    android:tag="S_Vip"
                    android:background="@color/white"
                    android:visibility="gone"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="@dimen/base_dimen_60"
                            android:layout_height="@dimen/base_dimen_60"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_huiyuansz"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_toRightOf="@+id/image4"
                            android:text="会员设置"
                            android:textColor="@color/word_color"
                            android:textSize="@dimen/base_dimen_32"
                            />

                        <ImageView
                            android:layout_width="@dimen/base_dimen_24"
                            android:layout_height="@dimen/base_dimen_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_jiant"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dimen_1"
                        android:layout_below="@+id/relfour"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:background="#c2c2c2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rel_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltwo"
                    android:orientation="vertical"
                    android:tag="M_User"
                    android:background="@color/white"
                    android:visibility="gone"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/image6"
                            android:layout_width="@dimen/base_dimen_60"
                            android:layout_height="@dimen/base_dimen_60"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_yongh"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_toRightOf="@+id/image6"
                            android:text="用户管理"
                            android:textColor="@color/word_color"
                            android:textSize="@dimen/base_dimen_32"
                            />

                        <ImageView
                            android:layout_width="@dimen/base_dimen_24"
                            android:layout_height="@dimen/base_dimen_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_jiant"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dimen_1"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:background="#c2c2c2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rel_banben"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltwo"
                    android:orientation="vertical"
                    android:tag="P_Version"
                    android:background="@color/white"
                    android:visibility="gone"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/image7"
                            android:layout_width="@dimen/base_dimen_60"
                            android:layout_height="@dimen/base_dimen_60"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_banb"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_toRightOf="@+id/image7"
                            android:text="版本升级"
                            android:textColor="@color/word_color"
                            android:textSize="@dimen/base_dimen_32"
                            />

                        <ImageView
                            android:id="@+id/right"
                            android:layout_width="@dimen/base_dimen_24"
                            android:layout_height="@dimen/base_dimen_24"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/base_dimen_20"
                            android:src="@drawable/spsz_jiant"
                            />

                        <TextView
                            android:id="@+id/tv_version_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/base_dimen_20"
                            android:layout_toLeftOf="@id/right"
                            android:text="当前版本："
                            android:textColor="@color/word_color"
                            android:textSize="@dimen/base_dimen_24"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dimen_1"
                        android:layout_below="@+id/relfour"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:background="#c2c2c2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rel_tuichu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltwo"
                    android:orientation="vertical"
                    android:tag="P_Back"
                    android:visibility="gone"
                    android:background="@color/white"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/image8"
                            android:layout_width="@dimen/base_dimen_60"
                            android:layout_height="@dimen/base_dimen_60"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:src="@drawable/toback"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/base_dimen_20"
                            android:layout_toRightOf="@+id/image8"
                            android:text="退出系统"
                            android:textColor="@color/word_color"
                            android:textSize="@dimen/base_dimen_32"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dimen_1"
                        android:layout_below="@+id/relfour"
                        android:layout_marginTop="@dimen/base_dimen_20"
                        android:background="#c2c2c2"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
