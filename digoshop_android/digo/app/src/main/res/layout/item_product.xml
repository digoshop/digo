<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/base_dimen_20"
              android:background="@color/white"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_product_url"
        android:layout_width="@dimen/base_dimen_160"
        android:layout_height="@dimen/base_dimen_160"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_160"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/base_dimen_30"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_product_favorable_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="¥199"
                android:textColor="@color/red"
                android:textSize="@dimen/base_dimen_30"/>

            <TextView
                android:id="@+id/tv_product_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="状态"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_24"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_product_market_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="¥199"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_24"/>

            <Button
                android:id="@+id/btn_is_tui"
                android:layout_width="@dimen/base_dimen_60"
                android:layout_height="@dimen/base_dimen_32"
                android:layout_gravity="center_vertical"
                android:background="@drawable/my_tv_border"
                android:gravity="center"
                android:layout_marginRight="@dimen/base_dimen_40"
                android:text="推荐"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_20"

                />

            <Button
                android:id="@+id/btn_is_use"
                android:layout_width="@dimen/base_dimen_60"
                android:layout_height="@dimen/base_dimen_32"
                android:layout_gravity="center_vertical"
                android:background="@drawable/my_tv_border"
                android:gravity="center"
                android:text="上架"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_20"

                />

            <ImageView
                android:id="@+id/img_update"
                android:layout_width="@dimen/base_dimen_30"
                android:layout_height="@dimen/base_dimen_30"
                android:layout_marginLeft="@dimen/base_dimen_40"
                android:src="@drawable/bianjipic"/>

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="@dimen/base_dimen_30"
                android:layout_height="@dimen/base_dimen_30"
                android:layout_marginLeft="@dimen/base_dimen_40"
                android:src="@drawable/shanchupic"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>