<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <include layout="@layout/layout_title"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:layout_marginTop="@dimen/base_dimen_30"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="店铺启用"
                    android:textColor="@color/word_color"
                    android:textSize="@dimen/base_dimen_30"
                    />

                <ToggleButton
                    android:id="@+id/togglebutton"
                    android:layout_width="@dimen/base_dimen_70"
                    android:layout_height="@dimen/base_dimen_40"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/setting_toggle_button"
                    android:checked="false"
                    android:textOff=""
                    android:textOn=""
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:layout_marginTop="@dimen/base_dimen_20"
                android:background="@color/line"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:layout_marginTop="@dimen/base_dimen_12"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是否接收定制"
                    android:textColor="@color/word_color"
                    android:textSize="@dimen/base_dimen_30"
                    />

                <ToggleButton
                    android:id="@+id/togglebutton_cc"
                    android:layout_width="@dimen/base_dimen_70"
                    android:layout_height="@dimen/base_dimen_40"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/setting_toggle_button"
                    android:checked="false"
                    android:textOff=""
                    android:textOn=""
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/togglebutton"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:layout_marginTop="@dimen/base_dimen_10"
                android:text="如果商家不想接收回复用户发送的需求,可选择关闭接收"
                android:textColor="@color/editext_word_color"
                android:textSize="@dimen/base_dimen_24"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:layout_marginTop="@dimen/base_dimen_12"
                android:background="@color/line"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
