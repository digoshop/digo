<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:padding="@dimen/base_dimen_20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/usermanage_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="王永祥"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_30"
            />

        <TextView
            android:id="@+id/usermanage_phonenumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="18611672602"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_28"

            />

        <TextView
            android:id="@+id/usermanage_kind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:text="门店店长"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_28"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_20">

        <TextView
            android:id="@+id/creattime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="2016.1.21"
            android:textColor="@color/word_time"
            android:textSize="@dimen/base_dimen_28"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/usermanage_status"
                android:layout_width="@dimen/base_dimen_60"
                android:layout_height="@dimen/base_dimen_32"
                android:layout_gravity="center_vertical"
                android:background="@drawable/my_tv_border"
                android:gravity="center"
                android:text="禁用"
                android:textColor="@color/black"
                android:textSize="@dimen/base_dimen_20"
                />


            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/base_dimen_30"
                android:layout_height="@dimen/base_dimen_30"
                android:layout_marginLeft="@dimen/base_dimen_20"
                android:src="@drawable/shanchupic"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>