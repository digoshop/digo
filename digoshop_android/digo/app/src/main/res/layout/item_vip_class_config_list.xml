<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="horizontal"
              android:padding="@dimen/base_dimen_20"
    >

    <TextView
        android:id="@+id/config_vip_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="普通会员"
        android:textColor="@color/word_color"
        android:textSize="@dimen/base_dimen_30"
        />

    <TextView
        android:id="@+id/config_vip_jifen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/word_color"
        android:textSize="@dimen/base_dimen_30"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/base_dimen_30"
            android:layout_height="@dimen/base_dimen_30"
            android:layout_gravity="center"
            android:src="@drawable/shanchupic"
            />

        <TextView
            android:id="@+id/config_vip_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/base_dimen_2"
            android:text="删除"
            android:textColor="#999999"
            android:textSize="@dimen/base_dimen_28"
            />


    </LinearLayout>


</LinearLayout>