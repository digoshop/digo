<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/base_dimen_160"
              android:layout_margin="@dimen/base_dimen_20"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_product_url"
        android:layout_width="@dimen/base_dimen_160"
        android:layout_height="@dimen/base_dimen_160"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_160"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/base_dimen_28"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_product_favorable_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="¥199"
                android:textColor="@color/red"
                android:textSize="@dimen/base_dimen_36"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_product_market_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="¥199"
            android:textColor="@color/black"
            android:textSize="@dimen/base_dimen_24"/>


    </LinearLayout>
</LinearLayout>