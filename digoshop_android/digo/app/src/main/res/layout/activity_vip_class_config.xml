<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/class_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/base_dimen_20"
            android:text="等级名称"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_30" />

        <View
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/base_dimen_20"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:background="#c4c4c4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/base_dimen_20"
            android:text="所需积分"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_30" />

        <View
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/base_dimen_20"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:background="#c4c4c4" />

        <TextView
            android:id="@+id/operate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/base_dimen_20"
            android:text="操作"
            android:textColor="@color/word_color"
            android:textSize="@dimen/base_dimen_30" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_1"
        android:layout_below="@+id/linear2"
        android:background="#c2c2c2" />

    <ListView
        android:id="@+id/vip_class_config_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_line"
        android:background="#FFFFFF"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"></ListView>

</LinearLayout>
